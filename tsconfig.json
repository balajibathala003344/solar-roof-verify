  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],

  "compilerOptions": {
    // Base folder reference
    "baseUrl": ".",

    // Path alias for imports (@ â†’ src)
    "paths": {
      "@/*": ["./src/*"]
